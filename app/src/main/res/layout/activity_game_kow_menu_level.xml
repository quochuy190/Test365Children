<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_kow_menu_level" />

    <ImageView
        android:id="@+id/btn_level_one"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_height_menu_level"
        android:layout_marginLeft="@dimen/kow_menu_level_margin_left_guild"
        android:layout_marginBottom="@dimen/kow_menu_level_margin_bottom_guild"
        android:adjustViewBounds="true"
        android:src="@drawable/img_kow_level_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <android.support.constraint.Guideline
        android:id="@+id/gl_ver_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_ver_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3333" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_hori_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_hori_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <ImageView
        android:id="@+id/btn_level_two"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_height_menu_level"
        android:layout_marginEnd="@dimen/kow_menu_level_margin_left_guild"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_kow_level_3"
        app:layout_constraintBottom_toTopOf="@+id/gl_hori_two"
        app:layout_constraintEnd_toStartOf="@+id/gl_ver_one" />

    <ImageView
        android:id="@+id/btn_level_three"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_height_menu_level"
        android:adjustViewBounds="true"
        android:src="@drawable/img_kow_level_2"
        app:layout_constraintBottom_toTopOf="@+id/gl_hori_one"
        app:layout_constraintStart_toStartOf="@+id/gl_ver_two" />
    <Button
        android:id="@+id/btn_start_kow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Hướng dẫn"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/kow_txt_btn_start"
        android:background="@drawable/btn_4"
        android:layout_marginBottom="@dimen/kow_btnstart_margin_bottom"
        android:layout_width="@dimen/kow_width_btn_start"
        android:layout_height="@dimen/kow_height_btn_start" />

    <TextView
        android:id="@+id/txt_level_1"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_width_menu_level"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Level 1"
        android:textColor="@color/white"
        android:textSize="@dimen/kow_txt_menu_level"
        app:layout_constraintLeft_toLeftOf="@id/btn_level_one"
        app:layout_constraintTop_toTopOf="@id/btn_level_one" />

    <TextView
        android:id="@+id/txt_level_2"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_width_menu_level"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Level 2"
        android:textColor="@color/white"
        android:textSize="@dimen/kow_txt_menu_level"
        app:layout_constraintStart_toStartOf="@+id/btn_level_two"
        app:layout_constraintTop_toTopOf="@+id/btn_level_two" />

    <TextView
        android:id="@+id/txt_level_3"
        android:layout_width="@dimen/kow_width_menu_level"
        android:layout_height="@dimen/kow_width_menu_level"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Level 3"
        android:textColor="@color/white"
        android:textSize="@dimen/kow_txt_menu_level"
        app:layout_constraintEnd_toEndOf="@+id/btn_level_three"
        app:layout_constraintTop_toTopOf="@+id/btn_level_three" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/item_back_kow"
        android:layout_height="@dimen/item_back_kow"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/dp5"
        android:src="@drawable/img_back_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/item_back_kow"
        android:layout_height="@dimen/item_back_kow"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="@dimen/dp5"
        android:src="@drawable/img_mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>