<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView

        android:scaleType="fitXY"
        android:src="@drawable/bg_start_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_gameover"
            android:padding="@dimen/dp50"
            android:src="@drawable/title_game_over"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:padding="@dimen/dp5"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:textSize="@dimen/text_15sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Bạn đạt được phần thưởng"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/font1"
                android:id="@+id/txt_bonus"
                android:gravity="center"
                android:textSize="50sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="1.000 d"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/btn_2"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/btn_exit"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font1"
                    android:text="Đóng"
                    android:gravity="center"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="match_parent" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>