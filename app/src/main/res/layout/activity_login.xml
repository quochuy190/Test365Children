<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/login_width"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_top_login"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_edt_login"
        android:layout_marginTop="@dimen/margin_top_edt"
        android:layout_marginRight="@dimen/margin_edt_login"
        android:background="@drawable/spr_login_edt"
        android:padding="@dimen/pading_edt_login"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4">

        <ImageView
            android:id="@+id/img_username"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp2"
            android:padding="@dimen/dp5"
            android:src="@drawable/icon_username" />

        <EditText
            android:id="@+id/edt_user_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toRightOf="@id/img_username"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="*Tài khoản mẹ"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:padding="@dimen/dp7"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_edt_login"
        android:layout_marginTop="@dimen/margin_edt_top_login"
        android:layout_marginRight="@dimen/margin_edt_login"
        android:background="@drawable/spr_login_edt"
        android:padding="@dimen/pading_edt_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <ImageView
            android:id="@+id/img_user_con"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp2"
            android:padding="@dimen/dp5"
            android:src="@drawable/icon_username" />

        <EditText
            android:id="@+id/edt_user_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toRightOf="@id/img_user_con"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="*Tài khoản con"
            android:imeOptions="flagNoExtractUi"
            android:inputType="text"
            android:padding="@dimen/dp7"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_edt_login"
        android:layout_marginTop="@dimen/margin_edt_top_login"
        android:layout_marginRight="@dimen/margin_edt_login"
        android:background="@drawable/spr_login_edt"
        android:padding="@dimen/pading_edt_login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/img_pass"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp2"
            android:padding="@dimen/dp5"
            android:src="@drawable/icon_password" />

        <EditText
            android:id="@+id/edt_pass_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_pass"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:hint="*Mật khẩu"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textPassword"
            android:padding="@dimen/dp7"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <ImageView
            android:id="@+id/img_showpass"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:background="@color/white"
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_eye_show"
            android:tint="@color/gray" />
    </RelativeLayout>

    <ImageView

        android:id="@+id/img_dangnhap"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/hight_btn_login"
        android:layout_marginBottom="@dimen/margin_btn_bottom_login"
        android:src="@drawable/btn_dangnhap"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/img_mute"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_mute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>