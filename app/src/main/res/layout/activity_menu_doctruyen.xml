<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/btn_eng"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/spr_orange_click"
        android:fontFamily="@font/font1"
        android:text="Tiếng Anh"
        android:textColor="@color/white"
        android:textSize="@dimen/size_txt_content_guild_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_vie"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.27" />

    <Button
        android:id="@+id/btn_vie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/spr_button_blue_click"
        android:fontFamily="@font/font1"
        android:text="Tiếng Việt"
        android:textColor="@color/white"
        android:textSize="@dimen/size_txt_content_guild_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.13"
        app:layout_constraintStart_toEndOf="@+id/btn_eng"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.27"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="139dp" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/item_back_kow"
        android:layout_height="@dimen/item_back_kow"
        android:layout_margin="@dimen/dp7"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_mute"
        android:layout_width="@dimen/item_back_kow"
        android:layout_height="@dimen/item_back_kow"
        android:layout_margin="@dimen/dp7"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/img_mute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_back_kow"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_title_baitapdalam"
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:text="Chọn thể loại truyện"
        android:textColor="@color/white"
        android:textSize="@dimen/size_txt_content_guild_login"
        app:layout_constraintEnd_toStartOf="@+id/btn_mute"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</android.support.constraint.ConstraintLayout>