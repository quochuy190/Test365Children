<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/img_mute"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_back_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linear_text_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView

            android:id="@+id/txt_lable_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp2"
            android:text="BÀI TẬP TOÁN"
            android:textColor="@color/white"
            android:textSize="@dimen/text_25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuần 3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_text_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_soluongcauhoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp" />

        <TextView
            android:id="@+id/txt_thoigianlambai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:text="Thời gian làm bài: 30 phút"
            android:textColor="@color/white"
            android:textSize="@dimen/text_17sp" />

    </LinearLayout>

    <Button
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:text="Bắt đầu làm bài"
        android:id="@+id/btn_start_lambai"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/dp40"
        android:layout_below="@id/linear_text_center"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/btn_2"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_text_center" />

</android.support.constraint.ConstraintLayout>