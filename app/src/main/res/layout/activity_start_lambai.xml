<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_start_lambai" />
    <ImageView
        android:id="@+id/img_mute"
        android:layout_marginLeft="@dimen/margin_mute_lambai"
        android:layout_marginTop="@dimen/margin_mute_lambai"
        android:src="@drawable/img_mute"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp35" />

    <LinearLayout
        android:layout_marginBottom="@dimen/dp10"
        android:gravity="center_horizontal"
        android:layout_above="@id/ll_center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:textStyle="bold"
            android:id="@+id/txt_lable_mon"
            android:padding="@dimen/dp2"
            android:textSize="@dimen/text_25sp"
            android:textColor="@color/white"
            android:text="BÀI TẬP TOÁN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_tuan"
            android:textSize="@dimen/text_15sp"
            android:textColor="@color/white"
            android:text="Tuần 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/ll_center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_soluongcauhoi"
            android:padding="@dimen/dp10"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/white"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_thoigianlambai"
            android:padding="@dimen/dp10"
            android:textSize="@dimen/text_17sp"
            android:textColor="@color/white"
            android:text="Thời gian làm bài: 30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:id="@+id/btn_start_lambai"
        android:layout_marginTop="@dimen/dp20"
        android:layout_below="@id/ll_center"
        android:src="@drawable/btn_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40" />

</RelativeLayout>