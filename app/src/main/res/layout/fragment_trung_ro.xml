<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background">

        <ImageView
            android:layout_width="@dimen/margin_left_lambai"
            android:layout_height="@dimen/margin_left_lambai"
            android:layout_margin="@dimen/dp5" />

        <TextView
            android:gravity="center"
            android:id="@+id/txt_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/spr_lable_lambai"
            android:fontFamily="@font/font1"
            android:padding="@dimen/dp5"
            android:text=""
            android:textColor="@color/lable_lambai"
            android:textSize="@dimen/text_15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/margin_left_lambai"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>





    <android.support.constraint.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/btn_xemdiem"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lable">




        <ImageView
            android:id="@+id/img_rotrung_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/hight_egg"
            android:padding="@dimen/dp7"
            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_2" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:text="Rổ trứng 1"
            android:id="@+id/txt_rotrung_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_2" />

        <ImageView
            android:id="@+id/img_rotrung_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/hight_egg"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp7"
            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_1"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_3" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:text="Rổ trứng 2"
            android:id="@+id/txt_rotrung_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_1"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_3" />
        <ImageView
            android:id="@+id/img_rotrung_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/hight_egg"
            android:padding="@dimen/dp7"
            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_2"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_4" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:text="Rổ trứng 3"
            android:id="@+id/txt_rotrung_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_2"
            app:layout_constraintRight_toLeftOf="@id/img_rotrung_4" />

        <ImageView
            android:id="@+id/img_rotrung_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/hight_egg"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp7"
            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_3"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15sp"
            android:text="Rổ trứng 4"
            android:id="@+id/txt_rotrung_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ro_trung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_rotrung_3"
            app:layout_constraintRight_toRightOf="parent"  />
        <RelativeLayout
            android:id="@+id/rl_trung1"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung1"
                android:layout_width="@dimen/width_egg"
                android:layout_height="@dimen/hight_egg"
                android:padding="@dimen/dp20"
                android:src="@drawable/egg_yellow" />

            <TextView
                android:id="@+id/txt_trung1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="trứng 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung2"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung2"
                android:layout_width="@dimen/width_egg"
                android:layout_height="@dimen/hight_egg"
                android:padding="@dimen/dp20"
                android:src="@drawable/egg_pink" />

            <TextView
                android:id="@+id/txt_trung2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="trứng 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung3"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung3"
                android:layout_width="@dimen/width_egg"
                android:layout_height="@dimen/hight_egg"
                android:padding="@dimen/dp20"
                android:src="@drawable/egg_blue" />

            <TextView
                android:id="@+id/txt_trung3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="trứng 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_trung4"
            android:layout_width="@dimen/width_egg"
            android:layout_height="@dimen/hight_egg"
            android:layout_marginLeft="@dimen/margin_egg_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_trung4"
                android:layout_width="@dimen/width_egg"
                android:layout_height="@dimen/hight_egg"
                android:padding="@dimen/dp20"
                android:src="@drawable/egg_red" />

            <TextView
                android:id="@+id/txt_trung4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="trứng 1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>
    <TextView
        android:visibility="visible"
        android:textStyle="bold"
        android:id="@+id/txt_cauhoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_lable"
        android:padding="@dimen/dp5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_content_cauhoi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_lable" />

    <ImageView
        android:id="@+id/btn_xemdiem"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_next"
        android:padding="@dimen/dp5"
        android:src="@drawable/btn_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_nopbai"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:fontFamily="@font/font1"
        android:gravity="center"
        android:textSize="@dimen/text_13sp"
        android:textColor="@color/white"
        android:text="Xem điểm"
        android:id="@+id/txt_xemdiem"
        android:layout_width="250dp"
        android:layout_height="@dimen/image_next"
        android:padding="@dimen/dp5"
        android:src="@drawable/btn_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_nopbai"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/btn_nopbai"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_next"
        android:padding="@dimen/dp5"
        android:src="@drawable/btn_nopbai"
        app:layout_constraintLeft_toRightOf="@id/btn_xemdiem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>