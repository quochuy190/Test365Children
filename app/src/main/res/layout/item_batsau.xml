<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp3"
    android:orientation="vertical"
    android:padding="@dimen/dp3">

    <TextView
        android:id="@+id/txt_dapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spr_txt_batsau"
        android:gravity="center"
        android:maxLines="3"
        android:padding="@dimen/dp10"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="@dimen/text_17sp" />

    <ImageView
        android:id="@+id/img_lasau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_dapan"
        android:padding="@dimen/dp5"
        android:src="@drawable/icon_la_cay" />

    <ImageView
        android:id="@+id/img_consau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_dapan"
        android:padding="@dimen/dp5"
        android:src="@drawable/icon_sau" />

</RelativeLayout>