<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hight_item_bottom">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_bxh"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/img_avata"
        android:layout_width="@dimen/hight_item_bottom"
        android:layout_height="@dimen/hight_item_bottom"
        android:layout_toRightOf="@id/ll_stt"
        android:padding="@dimen/dp5"
        android:src="@drawable/icon_avata" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/img_avata">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:text="Họ tên"
                android:textColor="@color/red_test365"
                android:textSize="@dimen/text_17sp" />

            <TextView
                android:id="@+id/txt_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp3"
                android:text="Họ tên"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp5"
                android:text="Đăng xuất"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5" />

</RelativeLayout>